{
  "compilerOptions": {
    "target": "ES6",               // ou "ES2017", "ES2020", etc.
    "module": "ESNext",            // ou "commonjs", a depender do projeto
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],      // para usar Object.values e APIs do browser
    "rootDir": "./src",            // onde ficam seus arquivos .ts
    "outDir": "./dist",            // para onde v√£o os arquivos .js compilados
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
